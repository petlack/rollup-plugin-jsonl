{
  "name": "rollup-plugin-jsonl",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Import jsonl (JSON lines) files as JSON array",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petlack/rollup-plugin-jsonl"
  },
  "author": "Peter Laca",
  "homepage": "https://github.com/petlack/rollup-plugin-jsonl",
  "bugs": "https://github.com/petlack/rollup-plugin-jsonl/issues",
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "exports": {
    "import": "./dist/es/index.js",
    "types": "./types/index.d.ts",
    "default": "./dist/cjs/index.js"
  },
  "scripts": {
    "build": "rollup -c",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "npm run lint:docs && npm --no-bail run lint:json && npm run lint:package && npm run lint:js",
    "lint:docs": "prettier --write **/README.md **/CHANGELOG.md",
    "lint:js": "eslint --cache src test types --ext .js,.ts,.mjs",
    "lint:json": "prettier --write **/tsconfig.json",
    "lint:package": "prettier --write **/package.json",
    "prebuild": "del-cli dist",
    "prepare": "husky install",
    "pretest": "npm run build",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "security": "npm audit --audit-level=high",
    "test": "ava"
  },
  "files": [
    "dist",
    "!dist/**/*.map",
    "types",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "rollup": "^1.20.0||^2.0.0||^3.0.0"
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.0.2",
    "tosource": "^2.0.0-alpha.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "ava": "^4.3.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.26.0",
    "eslint-config-rollup": "^3.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^11.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-package": "^1.3.0",
    "rollup": "^3.2.3",
    "typescript": ">=3.3.1 <4.8.0"
  },
  "types": "./types/index.d.ts",
  "ava": {
    "workerThreads": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix"
    ],
    "**/(package|tsconfig(.*)?).json": [
      "prettier --write"
    ],
    "((README|CHANGELOG)|(**/(README|CHANGELOG))).md": [
      "prettier --write"
    ]
  }
}
